<hr>
<div class="opportunities-container">
	{{#companies}}
	<div class="company-container">
		<h3>{{name}}
		</h3>
		<!-- {{companyId}} -->
		{{#opportunities}}
		<div class='wrapper'>
		<table class="opportunities-table">
			<tbody>
				<tr> 
					<td id="wrapper" class="opportunities name">{{position}}
					</td>
					<td class="expand"><i class="fa fa-caret-square-o-down"></i>
					</td>
					<td class="opportunities timeframe">{{status}}
					</td>
				</tr>
			</tbody>
		</table>
		<div class="details-container" id="reveal_details">
		<table>
			<tbody class="details" id="{{id}}">
				<tr>
					<td class="view-details">Absolute minimum requirement: {{requirements}}
					</td>
					<td>
				</tr>
				<tr>
					<td class="view-details">Estimated time to complete evaluation: {{timeestimate}}
					</td>
				</tr>
				<tr>
					<td class="view-details">Price: {{price}}
					</td>
				</tr>
				<tr>
					<td class="view-details">
						<ul class="user-actions">
							<li>
								<a href="/opportunities/{{companyId}}/evaluation/{{id}}">GET EVALUATION
								</a>
							</li>
						</ul>
						<form id="submit_upload" action="/opportunities/upload" method="post" enctype="multipart/form-data">
						<button id="user_upload" class="user-actions upload">UPLOAD EVALUATION
						</button>
						<input type="file" id="file" name="file" />
						</form>
					</td>
				</tr>
			</tbody>
		</table>
		</div>
		</div>
		{{/opportunities}}
	</div>
	{{/companies}}
</div>

<script src="/javascripts/opportunities.js"></script>